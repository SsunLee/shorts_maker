# Copy values into `web/.env.local` and `video-engine/.env`.
# This file is a convenience reference for all required keys.

# Shared app URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
PUBLIC_BASE_URL=http://localhost:3000

# Optional local data isolation for multi-instance runs
# SETTINGS_NAMESPACE=dev-3000
# SETTINGS_FILE=data/settings.dev-3000.json
# AUTOMATION_NAMESPACE=dev-3000
# AUTOMATION_TEMPLATE_FILE=data/automation-template.dev-3000.json
# AUTOMATION_SCHEDULE_FILE=data/automation-schedule.dev-3000.json

# OpenAI
OPENAI_API_KEY=
OPENAI_TEXT_MODEL=gpt-4.1-mini
OPENAI_IMAGE_MODEL=gpt-image-1
OPENAI_TTS_MODEL=gpt-4o-mini-tts

# Google Sheets
GSHEETS_SPREADSHEET_ID=
GSHEETS_SHEET_NAME=Shorts
GSHEETS_CLIENT_EMAIL=
GSHEETS_PRIVATE_KEY=

# YouTube OAuth
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REDIRECT_URI=http://localhost:3000/oauth2callback
YOUTUBE_REFRESH_TOKEN=

# Video engine
VIDEO_ENGINE_URL=http://localhost:8000
DEFAULT_SFX_PATH=assets/sfx.mp3
